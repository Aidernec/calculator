<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_button_weight_2" parent="style_button">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="style_button_weight_4" parent="style_button">
        <item name="android:layout_weight">4</item>
    </style>

    <style name="style_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>